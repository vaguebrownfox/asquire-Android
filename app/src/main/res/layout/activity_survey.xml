<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".SurveyActivity">

	<ScrollView
		android:id="@+id/survey_questions_scrollV"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">

		<LinearLayout
			android:id="@+id/survey_questions_ll"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:padding="8dp"
			app:layout_constraintTop_toTopOf="parent"
			tools:layout_editor_absoluteX="0dp">

			<TextView
				android:id="@+id/survey_init_text"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:fontFamily="sans-serif-thin"
				android:paddingHorizontal="8dp"
				android:paddingVertical="24dp"
				android:text="@string/few_questions_before_we_proceed"
				android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
				android:textStyle="bold"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent" />

			<FrameLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:focusable="true">

				<fragment
					android:id="@+id/survey_fragment_user_info_container"
					android:layout_width="match_parent"
					android:layout_height="match_parent"

					android:name="aashi.fiaxco.asquire0x07.fragments.UserInfoFragment"
					tools:layout="@layout/fragment_user_info"
					/>
			</FrameLayout>

		</LinearLayout>


	</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>